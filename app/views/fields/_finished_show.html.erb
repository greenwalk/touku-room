<div class="result">
  <div class="haiku__result">
    <div class="haiku__rank">
        <%= "#{haiku_counter + 1}位" %>
    </div>
    <div class="haiku__points">
        <%= link_to "#{haiku.votes.count}点", field_haiku_path(haiku.field.id, haiku.id) %>
    </div>
  </div>
  <div class="haiku__body">
    <%= link_to haiku.user.name, user_path(haiku.user.id), class: :finished__user %>
    <div class="result__haiku"><%= link_to haiku.content, field_haiku_path(haiku.field.id, haiku.id) %></div>
  </div>
</div>