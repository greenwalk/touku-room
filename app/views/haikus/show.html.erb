<div class="main">
  <div class="inner">
    <%# 現在のお題を表示 %>
    <%= render 'shared/theme_card' %>
    <%# 作品を表示 %>
    <div class="haiku__wrapper">
      <h2 class="field-heading"><%= link_to @haiku.user.name, user_path(@haiku.user.id) %><%= "様の作品" %></h2>
      <div class="haiku__display">
        <h2 class="haiku"><%= @haiku.content %></h2>
      </div>
    </div>
    <%# 俳句の投稿フォーム %>
    <div class="voted__users__wrapper">
      <h2 class="page-heading"><%= "投票者一覧" %></h2>
      <div class="voted__num"><%= "#{@votes.size}票" %></div>
      <%= render partial: 'voted_users', collection: @votes, as: 'vote' %>
    </div>
  </div>
</div>