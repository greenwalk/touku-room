<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="field-heading">ユーザー情報編集</h2>

      <%= form_with model: current_user, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :name, "俳号" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール（任意）" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "変更保存", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>